<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Yoshop{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/bootstrap-4/bootstrap-reboot.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/bootstrap-4/bootstrap.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/bootstrap-4/bootstrap-grid.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/fontawsome-5.all.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/projet.css') }}"/>
    {% block stylesheets %}{% endblock %}
</head>
<body>
{% include "_partials/_navbar.html.twig" %}

<div class="row container-fluid  main-div">
    <div class="col-md-9">
{% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
    </div>
    <div class="col-md-3">
        {{ render(controller('App\\Controller\\DefaultController::topSales', {'max': 3})) }}
    </div>
</div>

<script src="{{ asset('js/jquery-3/jquery.slim.min.js') }}"></script>
<script src="{{ asset('js/bootstrap-4/bootstrap.bundle.min.js') }}"></script>
{% block javascripts %}{% endblock %}
<script>
$(function () {
  $('[data-toggle="tooltip"]').tooltip()
})
</script>
</body>
</html>
