{% extends 'base.html.twig' %} {% block title %}Yoshop - Boutique{% endblock %}
{% block body %}

<div class="card col-md-12">
  <div class="card-header">
    <h1><i class="fas fa-store"></i> {{category.libelle}}</h1>
  </div>
  
  <div class="card-body row">
    {% for article in category.articles %}
    <div class="col-md-3">
      <a
        class="card clickable"
        href="{{ path('cart.add', {id: article.id}) }}" 
      >
        <img
          src="/images/articles/{{ article.visuel }}"
          class="card-img-top"
          alt="{{ article.libelle }}"
        />
        <div class="card-body">
          <h4 class="card-title">{{ article.libelle }}</h4>
          <p class="card-text"><i>{{ article.texte }}</i></p>
          <h2>
            <span class="badge badge-primary">
              <i class="fas fa-cart-plus"></i>
              {{ (article.prix)|currency_convert|format_currency(devise()) }}
            </span>
          </h2>
        </div>
      </a>
    </div>
    {% endfor %}
  </div>

</div>

{% endblock %}
